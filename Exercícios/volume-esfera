#include <stdio.h>
#include<math.h>

/*  16/08/2019 
 *  Fa√ßa um programa que leia um float que representa
 *  o raio de uma esfera e exiba o volume desta esfera.
 *  https://mundoeducacao.bol.uol.com.br/matematica/volume-esfera.htm
*/
int main() {
    
    float n,volume;
    
    scanf("%f",&n);
    
    volume = (4*3.14*(pow(n,3)))/3  ;
    
    printf("%f\n",volume);
    
    
    
    return 0;
}
